rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isVerified() {
      return isSignedIn() &&
             request.auth.token.email_verified == true;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isVerified() &&
             getUserData().role == 'admin';
    }

    /* ================= USERS ================= */
    match /users/{userId} {

      // User can create their doc during signup
      allow create: if isSignedIn() &&
                       request.auth.uid == userId;

      // User can read own profile even if not verified
      allow read: if isSignedIn() &&
                     request.auth.uid == userId;

      // Admin read members
      allow read: if isVerified() &&
                     isAdmin() &&
                     resource.data.role == 'member';

      allow update, delete: if false;
    }

    /* ================= GROUPS ================= */
    match /groups/{groupId} {

      // Members can read groups
      allow read: if isVerified() &&
                     request.auth.uid in resource.data.memberIds;

      // Allow any verified user to create group
      allow create: if isVerified() &&
                       request.auth.uid == request.resource.data.adminId;

      // Only admin updates
      allow update, delete: if isVerified() &&
                                request.auth.uid == resource.data.adminId;
    }

    /* ================= EXPENSES ================= */
    match /expenses/{expenseId} {

      function getGroup() {
        return get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data;
      }

      function getGroupFromRequest() {
        return get(/databases/$(database)/documents/groups/$(request.resource.data.groupId)).data;
      }

      allow read: if isVerified() &&
                     request.auth.uid in getGroup().memberIds;

      allow create: if isVerified() &&
                       request.auth.uid in getGroupFromRequest().memberIds &&
                       request.resource.data.paidByUserId
                          in getGroupFromRequest().memberIds;

      allow delete: if isVerified() &&
                       (request.auth.uid == getGroup().adminId ||
                        request.auth.uid == resource.data.paidByUserId);

      allow update: if false;
    }
  }
}
